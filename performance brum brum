# install custom kernel
sudo add-apt-repository ppa:damentz/liquorix
sudo nala update
sudo nala install -y curl
curl -s 'https://liquorix.net/install-liquorix.sh' | sudo bash
# install auto-cpufreq: https://github.com/AdnanHodzic/auto-cpufreq
git clone https://github.com/AdnanHodzic/auto-cpufreq.git
cd auto-cpufreq && sudo ./auto-cpufreq-installer
# install gamemode: https://github.com/FeralInteractive/gamemode
apt install meson libsystemd-dev pkg-config ninja-build git libdbus-1-dev libinih-dev build-essential
